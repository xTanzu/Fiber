{% macro login_form(placeholder_username) %}
    <h1 class="credentials_title">Login</h1>
    <form class="credentials_form" action="{{ url_for("login") }}" method="POST">
        <input type="text" class="credentials_field" name="username" placeholder="username" value="{{ placeholder_username }}"><br>
        <input type="password" id="password" class="credentials_field" name="password" placeholder="password"><br>
        <input type="submit" class="button login" value="Login"><br>
        <input type="button" class="button register" value="Register" onclick="location.href='/register'">
    </form>    
{% endmacro %}

{% macro register_form(placeholder_username) %}
    <h1 class="credentials_title">Register</h1>
    <form class="credentials_form" action="{{ url_for("register") }}" method="POST">
        <input type="text" class="credentials_field" name="username" placeholder="username" value="{{ placeholder_username }}"><br>
        <input type="password" class="credentials_field" name="password" placeholder="password"><br>
        <input type="password" class="credentials_field" name="rpt_password" placeholder="repeat password"><br>
        <input type="submit" class="button register" value="Register"><br>
        <input type="button" class="button login" value="Login" onclick="location.href='/login'">
    </form>    
{% endmacro %}
